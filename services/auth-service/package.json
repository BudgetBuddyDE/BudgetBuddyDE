{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Auth-service based on better-auth for Budget-Buddy",
  "main": "index.js",
  "scripts": {
    "start": "node build/src/server.js",
    "dev": "npx tsx watch src/server.ts",
    "build": "npx rimraf build && npx tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "lint": "echo \"Error: no linting rules specified\" && exit 1",
    "ba:schema-generate": "npx @better-auth/cli generate --output src/db/schema/auth/auth-schema.ts",
    "ba:schema-migrate": "npx @better-auth/cli migrate",
    "db:generate": "npm run ba:schema-generate -- -y && npx prettier --write src/db/schema/auth && npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio"
  },
  "keywords": [],
  "author": "Thorben Klein",
  "license": "ISC",
  "dependencies": {
    "@budgetbuddyde/utils": "^1.1.1",
    "better-auth": "^1.2.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.1",
    "drizzle-zod": "^0.8.2",
    "express": "^4.21.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.0",
    "redis": "^4.7.1",
    "winston": "^3.17.0",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.15.4",
    "@vitest/ui": "^3.0.7",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.0.7"
  }
}
