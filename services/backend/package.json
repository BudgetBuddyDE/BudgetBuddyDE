{
  "name": "backend",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1",
    "@sap/cds": "^8",
    "better-auth": "^1.2.12",
    "express": "^4",
    "redis": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/eslint-plugin-cds": "^3.2.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5"
  },
  "scripts": {
    "generate-cds-models": "rimraf @cds-models && npx @cap-js/cds-typer \"*\"",
    "before:cds-watch": "npm run generate-cds-models",
    "build": "cds build --production",
    "start": "cds-serve",
    "watch": "cds-tsx w",
    "watch:hybrid": "cds-tsx w --profile hybrid",
    "format": "prettier --write ./srv",
    "postinstall": "npm run generate-cds-models",
    "gen-openapi": "cds compile srv --service all -o docs --to openapi"
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "cds": {
    "requires": {
      "db": {
        "[production]": {
          "kind": "postgres",
          "dialect": "postgres"
        },
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        },
        "auth": {
          "impl": "srv/auth.ts"
        }
      }
    }
  }
}
