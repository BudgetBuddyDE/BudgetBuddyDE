{
  "name": "backend",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "git@github.com:budgetbuddyde/budgetbuddyde.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "cds build --production",
    "start": "cds-serve",
    "watch": "cds-tsx w",
    "format": "prettier --write .",
    "generate-cds-models": "rimraf @cds-models && npx @cap-js/cds-typer \"*\" --outputDirectory @cds-models",
    "postinstall": "npm run generate-cds-models"
  },
  "dependencies": {
    "@cap-js/postgres": "^1.14.1",
    "@sap/cds": "^8.8.3",
    "express": "^4",
    "node-fetch": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.3.0",
    "@cap-js/cds-typer": "^0.33.0",
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8.7.3",
    "@sap/eslint-plugin-cds": "^3.1.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.0.0",
    "@types/node-fetch": "^2.6.12",
    "eslint": "^9.20.1",
    "mbt": "^1.2.34",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5"
  },
  "cds": {
    "typer": {
      "use_entities_proxy": true
    },
    "server": {
      "index": true
    },
    "requires": {
      "db": {
        "[production]": {
          "kind": "postgres",
          "dialect": "postgres"
        },
        "[pg]": {
          "kind": "postgres",
          "dialect": "postgres"
        },
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "url": "db.sqlite"
          }
        }
      },
      "auth": {
        "[production]": {
          "impl": "srv/auth.js"
        },
        "[better-auth]": {
          "impl": "srv/auth.ts"
        },
        "[development]": {
          "kind": "dummy"
        }
      }
    },
    "features": {
      "fetch_csrf": true
    },
    "log": {
      "levels": {
        "compile": "warn",
        "cli": "warn",
        "cds": "error",
        "build": "info",
        "db": "info",
        "odata": "info",
        "rest": "info",
        "auth": "info",
        "deploy": "info",
        "mtx": "info"
      },
      "[production]": {
        "levels": {
          "cds": "error",
          "db": "error",
          "odata": "error",
          "rest": "error",
          "auth": "error"
        }
      }
    }
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}
